@model System.Collections.Generic.List<CustomerCRM.Models.Customer>

<h2>Customer List</h2>

<form asp-action="Index" method="get">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Search by name" />
    <input type="submit" value="Search" />
</form>

<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-action="Index" asp-route-sortOrder="firstName_asc">First Name</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="lastName_asc">Last Name</a>
        </th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.FirstName</td>
            <td>@customer.LastName</td>
            <td>@customer.Email</td>
            <td>
                <a href="@Url.Action("Details", "Customers", new { id = customer.Id })">Details</a> |
                <a href="@Url.Action("Edit", "Customers", new { id = customer.Id })">Edit</a> |
                <a href="@Url.Action("Delete", "Customers", new { id = customer.Id })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Create", "Customers")" class="btn btn-primary">Add New Customer</a>